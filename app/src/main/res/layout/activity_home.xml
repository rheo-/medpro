<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.genericslab.medpro.ui.HomeActivity">
    <ImageView
        android:id="@+id/MedproLogo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:src="@drawable/medpro_logo"
        />

    <EditText
        android:layout_marginTop="100dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/MedproLogo"
        android:id="@+id/EditTextUsername"
        android:hint="@string/hint.enterUsername"
        android:inputType="textPersonName"
        />
    <EditText
        android:layout_marginTop="10dp"
        android:layout_width="300dp"
        android:layout_centerHorizontal="true"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextUsername"
        android:id="@+id/EditTextPassword"
        android:hint="@string/hint.enterPassword"
        android:inputType="number"/>
    <CheckBox
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/EditTextPassword"
        android:layout_alignLeft="@id/EditTextPassword"
        android:text="Remember me"
        android:id="@+id/CheckboxRemember"
        />
    <Button
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/CheckboxRemember"
        android:id="@+id/ButtonLogin"
        android:text="@string/label.login"
        android:background="@color/primary"
        />
    <TextView
        android:layout_marginTop="50dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ButtonLogin"
        android:id="@+id/ForgotPassword"
        android:text="Forgot password? Click here"
        />
    <TextView
        android:layout_marginTop="20dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ForgotPassword"
        android:id="@+id/RegisterPrompt"
        android:text="@string/prompt.register"
        />

    <Button
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="10dp"
        android:layout_below="@id/RegisterPrompt"
        android:id="@+id/ButtonRegisterDoctor"
        android:text="@string/label.registerNewDoctor"
        android:background="@color/material.core.lime"
        />

</RelativeLayout>
